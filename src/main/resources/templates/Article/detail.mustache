{{>layouts/headers}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#article}}
        <tr>
            <td>{{title}}</td>
            <td>{{content}}</td>
        </tr>
    {{/article}}
    </tbody>
</table>

<a href="/articles/{{article.id}}/delete" class="btn btn-outline-danger">Delete</a>
<a href="/articles/{{article.id}}/edit" class="btn btn-outline-primary">Edit</a>
<a href="/articles" class="btn btn-outline-secondary">Back</a>

